{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "lineWidth": 88,
  "indentWidth": 2,
  "markdown": {
    "lineWidth": 88,
    "textWrap": "always"
  },
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/target",
    "**/.git",
    "**/.ralph/logs"
  ],
  "plugins": [
    "https://plugins.dprint.dev/markdown-0.17.8.wasm",
    "https://plugins.dprint.dev/json-0.19.4.wasm",
    "https://plugins.dprint.dev/toml-0.6.3.wasm",
    "https://github.com/dprint/dprint-plugin-sql/releases/download/0.2.0/plugin.wasm"
  ]
}
